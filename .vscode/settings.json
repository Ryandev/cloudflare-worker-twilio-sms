{
    "editor.snippetSuggestions": "top",
    "editor.minimap.enabled": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.detectIndentation": false,
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
        /* This will only add the missing import when there is only one candidate, multiple candidates will result in no imports added */
        "source.addMissingImports": true,
        "source.organizeImports": true,
        "source.fixAll.eslint": true
    },
    "[json][jsonc]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[typescript]": {
        "editor.formatOnPaste": true,
        "editor.formatOnSave": true
    },
    "[typescriptreact]": {
        "editor.formatOnPaste": true,
        "editor.formatOnSave": true
    },
    "search.exclude": {
        "**/dist": true,
        "**/node_modules": true,
        "**/.git": true,
        "**/.DS_Store": true,
    },
    "files.watcherExclude": {
        "**/.git/objects/**": true,
        "**/node_modules/**": true,
        "**/tmp": true
    },
    "files.exclude": {
        "**/.cspell": true,
        "**/.cache": true,
        "**/.data": true,
        "**/.git": true,
        "**/.svn": true,
        "**/.DS_Store": true,
        "**/node_modules": true,
        "**/.idea": true,
        "**/.vscode": false,
        "**/tmp": true,
        "__*": true
    },
    "jestrunner.jestCommand": "yarn run test --",
    "testEnvironment": "node",
    "workbench.welcome.enabled": false,
    "workbench.preferredDarkColorTheme": true
}
